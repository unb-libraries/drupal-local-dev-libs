{
    "authors": [
        {
            "name": "UNB Libraries libsupport@unb.ca",
            "role": "Creator"
        }
    ],
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "description": "Project definition for unb-libraries/ide-dev-libs",
    "extra": {
        "enable-patching": true,
        "installer-paths": {
            "core": [
                "type:drupal-core"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "libraries/{$name}": [
                "type:drupal-library"
            ],
            "modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        }
    },
    "license": "MIT",
    "minimum-stability": "stable",
    "name": "unb-libraries/ide-dev-libs",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "asm89/twig-lint": "^1.0.2",
        "drupal/coder": "^3.1",
        "drupal/config_update": "^1.3",
        "drupal/core": "^8.5.4",
        "drupal/entity_reference_revisions": "^1.6",
        "drupal/paragraphs": "^1.5",
        "friendsofphp/php-cs-fixer": "@stable",
        "j13k/yaml-lint": "^1.1.3",
        "leafo/scssphp": "^0.7.5",
        "phpmd/phpmd" : "@stable",
        "squizlabs/php_codesniffer": "3.*",
        "unb-libraries/drupal-builder": "^8.0.0"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "@install-drupal-cs-standard"
        ],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "install-drupal-cs-standard": [
            "rm -rf ./vendor/squizlabs/php_codesniffer/src/Standards/Drupal ./vendor/squizlabs/php_codesniffer/src/Standards/Drupal",
            "cp -r ./modules/contrib/coder/coder_sniffer/Drupal ./vendor/squizlabs/php_codesniffer/src/Standards/"
        ]
    },
    "type": "project"
}
